<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="tr.edu.ozu.ozunaviclient.MainActivity"
    tools:showIn="@layout/app_bar_main">

  <LinearLayout
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_weight="1.0"
      android:paddingBottom="@dimen/activity_vertical_margin"
      android:paddingLeft="@dimen/activity_horizontal_margin"
      android:paddingRight="@dimen/activity_horizontal_margin"
      android:paddingTop="@dimen/activity_vertical_margin">
      <Spinner
          android:id="@+id/userlist"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="1.6"
          android:background="@color/common_google_signin_btn_text_dark_disabled"></Spinner>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.8"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:text="USER INTERESTS"/>
    <ListView
        android:id="@+id/list2"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_weight="1.0">
    </ListView>
  </LinearLayout>

  <LinearLayout
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_weight="1.0">
    <RadioButton
        android:text="En kısa sürede olan eventlar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/radioButton1"
        android:layout_weight="1.0"
        android:onClick="onRadioButtonClicked"/>
    <RadioButton
        android:text="Konuma en yakın olan eventlar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/radioButton2"
        android:layout_weight="1.0"
        android:onClick="onRadioButtonClicked"/>
    <RadioButton
        android:text="İlgi alanına en yakın olanlar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/radioButton3"
        android:onClick="onRadioButtonClicked"
        android:layout_weight="1.0" />
    <RadioButton
        android:text="Saat + yakındaki mekanda olanlar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/radioButton4"
        android:onClick="onRadioButtonClicked"
        android:layout_weight="1.0" />
  </LinearLayout>




</LinearLayout>
